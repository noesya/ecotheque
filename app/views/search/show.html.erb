<header class="hero pb-5">
  <div class="container search-container">
    <%= form_tag search_path, method: :get, class: "row align-items-end", role: "search" do %>
      <div class="col-10 col-md-5">
        <input name="term" class="form-control search-input" type="search" placeholder="Recherche" aria-label="Recherche" value="<%= @term %>">
      </div>
      <div class="col-2 col-md-7">
        <button class="btn-search rounded-pill" type="submit">
          <span><%= t('search.label') %></span>
        </button>
      </div>
    <% end %>
    <dl class="mt-4 mb-3 mt-md-5 mb-md-4">
      <dt class="key-figure"><%= 34 %></dt>
      <dd><%= t('search.results.results.other') %></dd>
    </dl>
  </div>
</header>

<div class="document-content">
  <section class="bg-white">
    <div class="container pt-5">
      <div class="row">
        <div class="col-lg-6">
          <h2><%= t('search.results.materials.other') %></h2>
        </div>
        <% if @actor.full_address.present? %>
          <div class="col-lg-6 structure__item__string">
            <%= render 'structure/items/label', label: t('ui.actor.address') %>
            <p><%= @actor.full_address %></p>
          </div>
        <% end %>
        render 'materials'
      </div>
    </div>
  </div>
</div>