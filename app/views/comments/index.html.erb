<%= content_for :title, t('account.comments.title') %>

<div class="container py-5">
  <h1 class="mb-5 pb-5"><%= t('account.comments.title') %></h1>
  <% if @comments.none? %>
    <p><%= t('account.comments.none') %></p>
  <% else %>
    <% @comments.each do |comment| %>
      <div class="row mt-4">
        <h2 class="h3 mb-3"><%= t('account.comments.about_html', title: link_to(comment.about, comment.about, class: 'text-decoration-underline')) %></h2>
        <%= render 'comments/comment', comment: comment, is_index: true %>
        <div class="col-12">
          <hr class="opacity-25 mt-5">
        </div>
      </div>
    <% end %>
  <% end %>
</div>