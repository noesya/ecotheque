<%= content_for :title, Project.model_name.human(count: 2) %>

<header class="hero pb-5">
  <div class="container">
    <div class="row mt-md-4">
      <div class="col-lg-5">
        <hgroup>
          <h1><%= Project.model_name.human(count: 2) %></h1>
          <p class="mt-3 mt-md-5"><%= t('projects.description') %></p>
        </hgroup>
        <dl class="mt-4 mb-3 mt-md-5 mb-md-4">
          <dt class="key-figure"><%= @all_projects.count %></dt>
          <dd>Projets</dd>
        </dl>
        <%= link_to 'Voir le glossaire', options_projects_path, class: 'small arrow-right' %>
      </div>
    </div>
  </div>
</header>

<div class="document-content bg-white py-5" id="results">
  <div class="container directory">
    <div class="row">
      <%= render 'application/offcanvas-search-cta' %>
    </div>
    <div class="row align-items-start position-relative mt-lg-4">
      <div class="offcanvas-search col-lg-3 mt-3 mt-lg-0 pt-3 pt-lg-0" tabindex="-1" id="offcanvasScrolling">
        <%= render 'faceted_search/facets', facets: @facets, anchor: "#results" %>
      </div>
      <div class="directory-container col-lg-9 projects-list mt-4 mt-lg-0">
        <%= render 'list', objects: @projects, col_number: 4 %>
        <%= paginate @projects, theme: "bootstrap-5" %>
      </div>
    </div>
  </div>

  <div class="call-to-action bg-projects mt-5">
    <div class="container py-5">
      <div class="row align-items-center text-center text-md-start">
        <div class="col-lg-6">
          <h3 class="cta-title"><%= t('projects.call_to_action.title') %></h3>
          <p class="mt-4 d-none d-md-block"><%= t('projects.call_to_action.text') %></p>
        </div>
        <div class="col-lg-3 offset-lg-2 mt-3 mt-lg-0">
          <% if current_user %>
            <a href="#TODO" class="btn btn-dark"><%= t('projects.call_to_action.button') %></a>
          <% else %>
            <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#redirectionModal"><%= t('actors.call_to_action.button') %></button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if !current_user %>
  <%= render 'application/redirection-modale' %>
<% end %>