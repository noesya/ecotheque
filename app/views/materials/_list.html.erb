<div class="row materials-list">
  <% objects.each do |material| %>
    <div class="col-6 col-lg-4 mb-5">
      <article class="position-relative">
        <div class="btn-favorites position-absolute pt-1 ps-1">
          <%= render 'favorites/button', about: material %>
        </div>
        <%= render 'illustration', source: material, width: 400 %>
        <h2><%= link_to material, material, class: 'stretched-link' %></h2>
        <div class="tags d-flex align-items-start flex-wrap">
          <%= render 'structure/items/in_list', about: material %>
        </div>
      </article>
    </div>
  <% end %>
</div>
