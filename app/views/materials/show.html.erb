<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= kamifusen_tag @material.image,
                        class: 'img-fluid rounded square', 
                        alt: @material if @material.image.attached? %>
    </div>
    <div class="col-lg-6">
      <h1 class="mb-5 mt-n2"><%= @material %></h1>
      <%= render 'structure/items/zones/title', about: @material %>
      <p class="fw-bold"><%= sanitize @material.description %></p>
      <p class="small text-muted">
        Publié par 
        <a href="" class="text-muted">Pierre-André Boissinot</a> 
        le <%= l @material.created_at.to_date %>, 
        mis à jour le <%= l @material.updated_at.to_date %>
      </p>
      <%= link_to '', class: 'btn btn-sm btn-light bg-secondary-subtle add_to_favorites' do %>
        Ajouter aux favoris
      <% end %>
      <hr class="my-5">
      <%= render 'structure/items/zones/header', about: @material %>
      <% if @material.region %>
        <div class="mb-4">
          <%= render 'structure/items/label', 
                      label: Material.human_attribute_name(:region) %>
          <%= link_to @material.region, 
                      @material.region, 
                      class: 'btn btn-outline-dark btn-sm rounded-pill' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'structure/items/zones/page', about: @material %>
<% if @material.actor %>
  <section class="bg-white py-5">
    <div class="container">
      <h2><%= Material.human_attribute_name('actor') %></h2>
      <div class="row">
        <div class="offset-lg-6 col-lg-6">
          <div class="row">
            <div class="col-4">
              <%= link_to @material.actor do %>
                <%= kamifusen_tag @material.actor.image, width: 300, alt: @material.actor, class: 'img-fluid rounded square' %>
              <% end %>
            </div>
            <div class="col-8">
              <h3><%= link_to @material.actor, @material.actor %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>