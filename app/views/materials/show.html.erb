<%= content_for :title, @material %>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= render 'illustration', source: @material %>
    </div>
    <div class="col-lg-6">
      <h1><%= @material %></h1>
      <p class="fw-bold"><%= sanitize @material.description %></p>
      <%= render 'meta', about: @material %>
      <hr class="my-5">
      <%= render 'structure/items/zones/header', about: @material %>
      <%= render 'regions', about: @material %>
    </div>
  </div>
</div>
<%= render 'structure/items/zones/page', about: @material %>

<% if actor = @material.actors.premium.with_contact_informations.first %>
  <%# TODO: bg de la bonne couleur %>
  <section class="py-5">
    <div class="container">
      <h2><%= t('ui.material.contact') %></h2>
      <%= render 'actors/contact', actor: actor %>
    </div>
  </section>
<% end %>

<% if @material.actors.any? %>
  <section class="bg-white py-5">
    <div class="container">
      <h2><%= t('ui.material.actors') %></h2>
      <%= render 'projects/list', objects: @material.actors %>
    </div>
  </section>
<% end %>

<% if @material.projects.any? %>
  <section class="bg-white py-5">
    <div class="container">
      <h2><%= t('ui.material.projects', count: @material.projects.count) %></h2>
      <%= render 'projects/list', objects: @material.projects %>
    </div>
  </section>
<% end %>