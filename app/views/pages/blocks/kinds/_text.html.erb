<div class="block block-text py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <% if block.name.present? %>
          <h2><%= block %></h2>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= sanitize block.data.dig('text') %>
      </div>
    </div>
  </div>
</div>