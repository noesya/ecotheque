<%
elements = block.data.dig('elements')
%>
<div class="block block-keypoints py-5">
  <div class="container">
    <% if block.name.present? %>
      <h2><%= block.name %></h2>
    <% end %>
    <% if elements %>
      <div class="row">
        <% elements.each do |element| %>
          <%
          title = element.dig('title')
          text = element.dig('text')
          icon_blob_id = element.dig('icon', 'id')
          icon_blob = ActiveStorage::Blob.find_by(id: icon_blob_id)
          %>
          <div class="col-xl-3 col-lg-4 col-sm-6">
            <% if icon_blob %>
              <%= image_tag icon_blob, alt: "" %>
            <% end %>
            <% if title %>
              <h3 class="fw-bold"><%= title %></h3>
            <% end %>
            <%= simple_format text %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>