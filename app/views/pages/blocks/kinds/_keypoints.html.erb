<%
elements = block.data.dig('elements')
%>
<div class="container">
  <h2><%= block %></h2>
  <div class="row">
    <% elements.each do |element| %>
      <%
      title = element.dig('title')
      text = element.dig('text')
      %>
      <div class="col-lg-3">
        <h3><%= title %></h3>
        <%= simple_format text %>
      </div>
    <% end %>
  </div>
</div>