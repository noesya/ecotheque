<div class="modal search-modal" id="searchModal" data-bs-backdrop="static" tabindex="-1" aria-label="FenÃªtre de recherche" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="container text-end">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="container search-container">
        <%= form_tag search_path, method: :get, class: "row align-items-end", role: "search" do %>
          <div class="col-10 col-md-5">
            <input name="term" class="form-control search-input" type="search" placeholder="Recherche" aria-label="Recherche">
          </div>
          <div class="col-2 col-md-7">
            <button class="btn-search rounded-pill" type="submit">
              <span><%= t('search.label') %></span>
            </button>
          </div>
        <% end %>
      </div>
      <div class="container mt-4">
        <p class="small"><%= t('search.also') %></p>
        <div class="row">
          <div class="col">
            <%= link_to t('ecosystem'), actors_path(region_slug: nil), class: "stretched-link" %>
          </div>
          <div class="col">
            <%= link_to Project.model_name.human(count: 2), projects_path(region_slug: nil), class: "stretched-link" %>
          </div>
          <div class="col">
            <%= link_to Material.model_name.human(count: 2), materials_path(region_slug: nil), class: "stretched-link" %>
          </div>
          <div class="col">
            <%= link_to Technic.model_name.human(count: 2), technics_path(region_slug: nil), class: "stretched-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>