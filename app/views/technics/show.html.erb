<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= render 'illustration', source: @technic %>
    </div>
    <div class="col-lg-6">
      <h1><%= @technic %></h1>
      <p class="fw-bold"><%= sanitize @technic.description %></p>
      <%= render 'meta', about: @technic %>
      <hr class="my-5">
      <%= render 'structure/items/zones/header', about: @technic %>
    </div>
  </div>
</div>
<%= render 'structure/items/zones/page', about: @technic %>

<% if @technic.actors.any? %>
  <section class="bg-white py-5">
    <div class="container">
      <h2><%= t('ui.technic.actors', count: @technic.actors.count) %></h2>
      <%= render 'projects/list', objects: @technic.actors %>
    </div>
  </section>
<% end %>

<% if @technic.projects.any? %>
  <section class="bg-white py-5">
    <div class="container">
      <h2><%= t('ui.technic.projects', count: @technic.projects.count) %></h2>
      <%= render 'projects/list', objects: @technic.projects %>
    </div>
  </section>
<% end %>

<%= render 'comments/list', about: @technic %>
