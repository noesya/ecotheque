<header class="hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 position-relative">
        <div class="btn-favorites position-absolute pt-2 ps-2">
          <%= render 'favorites/button', about: @technic %>
        </div>
        <%= render 'illustration', source: @technic %>
        <% if @technic.image_credit.present? %>
          <p class="small credit mt-1"><%= @technic.image_credit %></p>
        <% end %>
      </div>
      <div class="col-lg-6 mt-4 mt-md-0">
        <h1><%= @technic %></h1>
        <% if @technic.description.present? %>
          <p class="small text-muted mt-4"><%= t('ui.global.hero') %></p>
          <p class="fw-bold"><%= sanitize @technic.description %></p>
        <% end %>
        <%= render 'meta', about: @technic %>
        <hr class="my-4">
        <%= render 'structure/items/zones/header', about: @technic %>
        <%= render 'regions', about: @technic %>
      </div>
    </div>
  </div>
</header>

<% if user_is_subscribed? %>

  <%= render 'structure/items/zones/page', about: @technic %>

  <% if @actors.any? %>
    <section class="bg-white pt-5">
      <div class="container">
        <h2><%= t('ui.technic.actors', count: @actors.count) %></h2>
        <%= render 'actors/list', objects: @actors %>
      </div>
    </section>
  <% end %>

  <% if @projects.any? %>
    <section class="bg-white pt-5">
      <div class="container">
        <h2><%= t('ui.technic.projects', count: @projects.count) %></h2>
        <%= render 'list', objects: @projects %>
      </div>
    </section>
  <% end %>

  <%= render 'comments/list', about: @technic %>

<% else %>

  <%= render 'paywall' %>

<% end %>
