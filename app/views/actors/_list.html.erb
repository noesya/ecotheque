<div class="row">
  <% objects.each do |actor| %>
    <div class="col-lg-4 mb-4">
      <article class="position-relative">
        <%= kamifusen_tag actor.image,
                          width: 400,
                          class: 'img-fluid rounded square',
                          alt: actor.image_alt if actor.image.attached? %>
        <h2><%= link_to actor, actor, class: 'stretched-link' %></h2>
        <%= render 'structure/items/in_list', about: actor %>
      </article>
    </div>
  <% end %>
</div>
