<%= content_for :title, Region.model_name.human(count: 2) %>

<header class="hero pb-5">
  <div class="container">
    <div class="row mt-md-4">
      <div class="col-lg-5">
        <hgroup>
          <h1><%= Region.model_name.human(count: 2) %></h1>
          <p class="mt-3 mt-md-5 col-8 col-md-6 col-lg-12"><%= t('regions.description') %></p>
        </hgroup>
      </div>
    </div>
  </div>
  <%= image_tag('letters/regions.svg', alt: '', width: '1440', height: '664') %>
</header>

<div class="document-content bg-white py-5">
  <div class="container">
    <div class="row">
      <% @regions.each do |region| %>
        <% next if region.empty? %>
        <div class="col-6 col-lg-4 mb-3 mb-lg-4">
          <div class="card">
            <div class="bg-light overflow-hidden square rounded">
              <%= kamifusen_tag region.image,
                                width: 400,
                                class: 'square h-100 w-100',
                                alt: region.image_alt if region.image.attached? %>
            </div>
            <div class="card-body px-0">
              <h2 class="card-title h5">
                <%= link_to region, region, class: 'stretched-link' %>
              </h2>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= render 'join' unless user_signed_in? %>

</div>