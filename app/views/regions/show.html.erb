        <div class="col-lg-3 offset-lg-2 mt-3 mt-md-0">
          <a href="#TODO" class="btn btn-dark"><%= t('projects.call_to_action.button') %></a>
        </div>
      </div>
    </div>
  </div>

  <% if @all_materials.count > 0 %>
    <div class="container pb-3 pt-5">
      <h2 class="mb-4"><%= link_to Material.model_name.human(count: 2), materials_path(@region.slug) %></h2>
      <%= render 'materials/list', objects: @materials %>
    </div>
  <% end %>

  <div class="call-to-action bg-materials">
    <div class="container py-5">
      <div class="row align-items-center text-center text-md-start">
        <div class="col-lg-6">
          <h3 class="cta-title"><%= t('materials.call_to_action.title') %></h3>
          <p class="mt-4 d-none d-md-block"><%= t('materials.call_to_action.text') %></p>
        </div>
