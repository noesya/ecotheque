          <a href="#TODO" class="btn btn-dark"><%= t('materials.call_to_action.button') %></a>
        </div>
      </div>
    </div>
  </div>

  <% if @all_technics.count > 0 %>
    <div class="container pb-3 pt-5">
      <h2 class="mb-4"><%= link_to Technic.model_name.human(count: 2), technics_path(@region.slug) %></h2>
      <%= render 'technics/list', objects: @technics %>
    </div>
  <% end %>

  <div class="call-to-action bg-technics">
    <div class="container py-5">
      <div class="row align-items-center text-center text-md-start">
        <div class="col-lg-6">
          <h3 class="cta-title"><%= t('technics.call_to_action.title') %></h3>
