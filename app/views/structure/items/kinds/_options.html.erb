<%
options = item.options_for(about)
%>
<div class="row mb-5">
  <div class="offset-lg-6 col-lg-6">
    <label class="small text-muted"><%= item %></label><br>
    <% if options.any? %>
      <% options.each do |option| %>
        <%= render 'structure/options/link', 
                  about: about, 
                  item: item, 
                  option: option %>
      <% end %>
    <% else %>
      <span class="btn btn-outline-dark rounded-pill disabled">Non renseign√©</span>
    <% end %>
  </div>
</div>