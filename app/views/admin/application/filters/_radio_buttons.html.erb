<% collection = filter[:collection].map { |elmt| elmt.is_a?(String) ? [elmt, elmt] : [elmt.is_a?(Hash) ? elmt[:to_s] : elmt.to_s, elmt[:id]] } %>
<%= f.input filter[:scope_name], 
            as: :radio_buttons, 
            label: filter[:label],
            collection: collection,
            required: false,
            checked: filter[:value_method].call(filter, params).nil? ? false : filter[:value_method].call(filter, params),
            input_html: { 
              checked:  filter[:value_method].call(filter, params),
              class: 'filter'
            },
            wrapper_html: { class: filter[:class] }
%>