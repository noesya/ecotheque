<%= form_tag('', method: :get, class: 'text-sm-end mt-n2 mt-sm-n5 js-order-by-form') do %>
  <% unless params[:filters].blank? %>
    <% params[:filters].each do |key, val| %>
      <%= hidden_field_tag "filters[#{key}]", val %>
    <% end %>
  <% end %>
  <%= select_tag( 'order_by', 
                  options_for_select(
                    [
                      [t('admin.order_by.created_at'), 'date:asc'],
                      [t('admin.order_by.created_at_desc'), 'date:desc'],
                      [t('admin.order_by.updated_at'), 'update_date:asc'],
                      [t('admin.order_by.updated_at_desc'), 'update_date:desc'],
                      [t('admin.order_by.name'), 'name:asc'],
                      [t('admin.order_by.name_desc'), 'name:desc']
                    ],
                    params[:order_by],
                  ),
                  { class: 'text-end btn btn-sm border-0 filter js-order-by-list' }
                  ) %>
<% end %>