<div class="table-responsive">
  <table class="<%= table_classes %>">
    <thead>
      <tr>
        <th><%= Transparency::Year.human_attribute_name('value') %></th>
        <th><%= Transparency::Revenue.model_name.human(count: 2) %></th>
        <th><%= Transparency::Cost.model_name.human(count: 2) %></th>
        <th><%= Transparency::Year.human_attribute_name('total') %></th>
      </tr>
    </thead>
    <tbody>
      <% years.each do |year| %>
        <tr>
          <td><%= link_to_if can?(:read, year), year, [:admin, year] %></td>
          <td><%= number_to_currency year.total_revenues, precision: 0 %></td>
          <td><%= number_to_currency year.total_costs, precision: 0 %></td>
          <td><%= number_to_currency year.total, precision: 0 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
