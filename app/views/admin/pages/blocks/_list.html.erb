<% blocks.each do |block| %>
  <div class="mb-4">
    <h2 class="h5"><%= block %></h2>
    <%= link_to 'Modifier', 
                edit_admin_page_block_path(page_id: @page.slug, id: block.id) %>
    <%= link_to 'Supprimer', 
                admin_page_block_path(page_id: @page.slug, id: block.id), 
                method: :delete, 
                class: 'text-danger',
                data: { confirm: t('please_confirm') } %>
  </div>
<% end %>