<%
# "model" can be "data" or "element"
# "property" is the key where to store the image data
dom_id = model == 'data' ? "'#{property}'" : "'element-' + index + '-#{property}'"
label ||= "Image"
remove ||= "Supprimer l'image"
images_formats_accepted ||= default_images_formats_accepted
hint ||= images_formats_accepted_hint(formats: images_formats_accepted)
%>
<div class="mb-3">
  <div v-if="!<%= model %>.<%= property %>.id">
    <label  class="form-label"
            :for="<%= dom_id.html_safe %>">
      <%= label %>
    </label>
    <input  class="form-control"
            type="file"
            accept="<%= images_formats_accepted %>"
            @change="onFileImageChange( $event, <%= model %>, '<%= property %>' )"
            :id="<%= dom_id.html_safe %>"
            >
  </div>
  <div v-if="<%= model %>.<%= property %>.id">
    <img :src="getImageUrl(<%= model %>.<%= property %>)" class="img-fluid mb-3" />
  </div>
  <a  class="btn btn-sm text-danger"
      v-on:click="<%= model %>.<%= property %>={}"
      v-if="<%= model %>.<%= property %>.id">
      <i class="<%= Icon::DELETE %>"></i>
    <%= remove %>
  </a>
  <div v-if="!<%= model %>.<%= property %>.id" class="form-text">
    <%= hint %>
  </div>
</div>
