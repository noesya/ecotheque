<%
# "model" can be "element", fallback to "data" if not set
model ||= "data"
# "property" is the key where to store the image data
label ||= "Image"
remove ||= "Supprimer l'image"
images_formats_accepted ||= default_images_formats_accepted
hint ||= images_formats_accepted_hint(formats: images_formats_accepted)
%>
<%= render "admin/pages/blocks/components/file/edit",
    model: model,
    property: property,
    label: label,
    remove: remove,
    formats_accepted: images_formats_accepted,
    hint: hint,
    preview: true %>