<%= simple_form_for [:admin, page] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-8">
      <%= f.input :name %>
      <%= f.input :path,
                  input_html: {
                    class: 'js-slug-input',
                    data: { source: '#page_name' }
                  } %>
      <%= f.input :description %>
    </div>
    <div class="col-lg-4">
      <%= f.input :parent, disabled: true if page.parent %>
      <%= f.input :position %>
    </div>
  </div>

  <% content_for :buttons do %>
    <%= submit f %>
  <% end %>
<% end %>
