<div class="nested-fields">
  <div class="card">
    <div class="fields card-body">
      <div class="row">
        <div class="col-lg-4">
          <%= f.input :file,
                      as: :single_deletable_file,
                      input_html: { accept: default_images_formats_accepted },
                      hint: images_formats_accepted_hint,
                      label: Structure::Value::File.human_attribute_name("image"),
                      label_html: { class: "small" },
                      preview: true %>
        </div>
        <div class="col-lg-8">
          <div class="mb-4">
            <i class="<%= Icon::SORT %> handle"></i>
            <%= link_to_remove_association t('delete'), 
                        f, 
                        class: 'text-danger float-end' %>
          </div>
          <%= f.input :alt, label_html: { class: "small" } %>
          <%= f.input :text, label_html: { class: "small" } %>
          <%= f.input :credit, label_html: { class: "small" } %>
        </div>
      </div>
    </div>
  </div>
</div>
