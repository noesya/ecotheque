<% about = f.object %>
<% Structure::Item.zones.keys.each do |zone| %>
  <% about.items.send("zone_#{zone}").each do |item| %>
    <% if item.kind_h2? %>
      <h2 class="h4 mt-5"><%= item %></h2>
    <% else %>
      <div class="row mb-4">
        <div class="offset-lg-4 col-lg-8">
          <label class="form-label" for="item_<%= item.id %>"><%= item %></label>
          <%= render "admin/structure/items/kinds/#{item.kind}/edit", f: f, about: about, item: item %>
          <div class="form-text"><%= item.hint %></div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
