<div class="table-responsive">
  <table class="<%= table_classes %>">
    <thead>
      <tr>
        <th><%= Region.human_attribute_name('name') %></th>
        <th><%= Region.human_attribute_name('image') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% regions.each do |region| %>
        <tr>
          <td><%= link_to_if can?(:read, region), region, [:admin, region] %></td>
          <td><%= kamifusen_tag region.image, width: 100 if region.image.attached? %></td>
          <td class="text-end">
            <%= edit_link region %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
