<%= content_for :title, @project %>

<div class="row">
  <div class="col-lg-4">
    <%= show @project, :image, type: :image %>
  </div>
  <div class="col-lg-8">
    <%= show @project, :description %>
    <%= render 'structure/items', about: @project %>
  </div>
</div>

<% content_for :buttons do %>
  <%= destroy_link @project %>
  <%= edit_link @project %>
<% end %>
