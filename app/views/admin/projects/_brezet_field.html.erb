<%
key = "admin.projects.hints.#{attribute}_html"
%>
<div class="mt-3">
  <strong>
    <%= f.input attribute, label: Project.human_attribute_name(attribute) %>
  </strong>
  <% if I18n.exists?(key, :fr) %>
    <div class="alert alert-light">
      <i class="bi bi-lightbulb float-end"></i> 
      <p><%= t key %></p>
    </div>
  <% end %>
  <%= f.input "#{attribute}_text", 
              label: false, 
              as: :summernote %>
</div>