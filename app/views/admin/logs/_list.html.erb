<div class="table-responsive">
  <table class="<%= table_classes %>">
    <thead>
      <tr>
        <th><%= User::Log.human_attribute_name('user') %></th>
        <th><%= User::Log.human_attribute_name('about') %></th>
        <th><%= User::Log.human_attribute_name('created_at') %></th>
      </tr>
    </thead>
    <tbody>
      <% logs.each do |log| %>
        <tr>
          <td><%= link_to_if can?(:read, log.user), log.user, [:admin, log.user] %></td>
          <td><%= link_to_if can?(:read, log.about), log.about, [:admin, log.about] %></td>
          <td><%= log.blob.filename %></td>
          <td><%= l log.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
