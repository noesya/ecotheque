<%= simple_form_for [:admin, material] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-4">
      <%= f.input :image, preview: true %>
    </div>
    <div class="col-lg-8">
      <%= f.input :name %>
      <%= f.input :slug,
                  input_html: material.persisted? ? {} : {
                    class: 'js-slug-input',
                    data: { source: '#material_name' }
                  } %>
      <%= f.association :region %>
      <%= f.input :description %>
      <%= render 'admin/structure/items', about: material %>
    </div>
  </div>

  <% content_for :buttons do %>
    <%= destroy_link material if material.persisted? %>
    <%= submit f %>
  <% end %>
<% end %>
