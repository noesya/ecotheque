<%= simple_form_for :filters, url: current_path, method: :get do |f| %>

  <%= filters_panel current_path: current_path, active_filters_count: active_filters_count do |form| %>

    <%= render_filter f, 
                      :string, 
                      :search, 
                      label: t('admin.filters.search_field')
                      %>

    <%= render_filter f, 
                      :select, 
                      :status, 
                      label: User::Comment.human_attribute_name('status'),
                      collection: User::Comment.statuses.map { |r, v| { to_s: I18n.t("enums.user.comment.status.#{r}"), id: r } }
                      %>

  <% end %>

<% end %>


