<%= content_for :title, @definition %>

<div class="row">
  <div class="col-lg-8">
    <%= show @definition, :text %>
  </div>
  <% if @definition.aliases.any? %>
    <div class="col-lg-4">
      <div class="mb-5">
        <label class="small text-muted"><%= Definition::Alias.model_name.human(count: @definition.aliases.count) %></label>
        <ul class="list-unstyled">
          <% @definition.aliases.ordered.each do |definition_alias| %>
            <li><%= definition_alias %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>

<% content_for :buttons do %>
  <%= destroy_link @definition %>
  <%= edit_link @definition %>
<% end %>
