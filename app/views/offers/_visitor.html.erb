<% hide_cta ||= false %>

<div class="col-lg-3">
  <div class="card border">
    <div class="card-body">
      <h5 class="card-title">S’inscrire</h5>
      <p>Accès aux fiches Écosystème et Projets</p>
      <hr>
      <ul class="check-list">
        <li>Proposez des fiches écosystème et projets</li>
        <li>Inscription à la newsletter (max 6/an)</li>
      </ul>
      <hr>
      <p>Gratuit</p>
      <% unless hide_cta %>
        <% if !current_user %>
          <%= link_to "Créer un compte", new_user_session_path, class: "btn btn-dark w-100" %>
        <% elsif current_user.visitor? %>
          <span class="btn btn-dark w-100 disabled">C'est votre formule actuelle</span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>